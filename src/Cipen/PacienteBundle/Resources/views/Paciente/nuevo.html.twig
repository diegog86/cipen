{% extends "ComunComunBundle:Default:layout.html.twig" %}

{% block admin_title %}
    Nuevo paciente
{% endblock %}

{% block admin_actions %}
    <li><a href="{{ path('paciente') }}"><i class="icon-chevron-left"></i> Volver a listado</a></li>
{% endblock %}

{% set admin_menu_active = 'paciente' %}    
    
{% block admin_content %}
        
    <form class="form-horizontal" method="POST" action="{{ path('paciente_crear') }}" >

        {% include 'CipenPacienteBundle:Paciente:_form.html.twig' %}        
        
        <div class="form-actions">
            <button class="btn btn-success pull-right" type="submit">Guardar</button>
        </div>
        
    </form>
    
{% endblock %}