{% extends "ComunComunBundle:Default:layout.html.twig" %}
  
{% block admin_title %}
    Gestión de medicamento
{% endblock %}
    
{% block admin_actions %}
    <li><a href="{{ path('medicamento_crear') }}"><i class="icon-plus"></i> Crear</a></li>
{% endblock %}
    
{% set admin_menu_active = 'medicamento' %}
    
{% block admin_content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Marca</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.marca }}</td>
                    <td>
                        <div style="margin:0; padding:0;" class="btn-toolbar pull-right">
                            <a class="btn" href="{{ path('medicamento_editar', {id: entity.id}) }}" title="Editar" >
                                <i class="icon-pencil"></i>
                            </a>
                            <a class="btn btn-danger" onclick="if(!confirm('¿Seguro desea eliminar este medicamento?')){ return false }" href="{{ path('medicamento_eliminar', {id: entity.id}) }}" title="Eliminar" >
                                <i class="icon-white icon-trash"></i>
                            </a>                                
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No existen registros</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>    
{% endblock %}
